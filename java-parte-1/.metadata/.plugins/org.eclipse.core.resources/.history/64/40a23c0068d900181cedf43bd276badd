public class TestaConversao {

	public static void main (String[] args) {
		double salario = 1250.50;
		float pontoFlutuante = 3.14;
		int valor = (int) salario;
		//vai mostrar apenas a parte inteira por conta do casting (int)
		System.out.println(valor);
		
		long numeroGrande = 3674899999048484848L;
		short numeroPequeno = 9999;
		byte numeroByte = 127;
		
		double  valor1 = 0.2;
		double  valor2 = 0.1;
		double total = valor1 + valor2;
		System.out.println(total);
		
	}
}
