
public class TestaVariaveis {
	public static void main(String[] args) {
		System.out.println("Olá novo teste");
		// java é estatica e fortemente tipada. Toda variável tem tipo
		int idade; 
		idade = 33;
		
		System.out.println("Mostrar o valor da variável idade " + idade);
		
		idade = 30 + 10;
		
		System.out.println("Mostrar o valor da variável idade " + idade);
		
		idade = 7 * 5 + 2;
		
		System.out.println("Mostrar o valor da variável idade " + idade);
		
		double salario;
		salario = 7650.50;
		
	}
	
}
